{
  "type": "webhook",
  "name": "slot_confirm",
  "description": "Confirm a selected appointment slot for a provider, with optional calendar conflict checking.",
  "disable_interruptions": false,
  "force_pre_tool_speech": "auto",
  "tool_call_sound": null,
  "tool_call_sound_behavior": "auto",
  "tool_error_handling_mode": "auto",
  "execution_mode": "immediate",
  "api_schema": {
    "url": "https://agent-for-schedules.replit.app/api/tools/slot-confirm",
    "method": "POST",
    "path_params_schema": [],
    "query_params_schema": [],
    "request_body_schema": {
      "id": "body",
      "type": "object",
      "description": "Use this tool after choosing the best provider and time. It confirms the booking or returns conflicts and next available time.",
      "properties": [
        {
          "id": "provider_id",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Provider id from provider_lookup response, e.g. sf-dent-1.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "is_system_provided": false,
          "required": true
        },
        {
          "id": "slot_start",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Selected appointment start in ISO datetime format, e.g. 2026-02-10T15:30:00Z.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "is_system_provided": false,
          "required": true
        },
        {
          "id": "duration_minutes",
          "type": "number",
          "value_type": "llm_prompt",
          "description": "Appointment duration in minutes; use 60 if unknown.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "is_system_provided": false,
          "required": false
        },
        {
          "id": "service_type",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Service category such as dentist, auto repair, or hairdresser.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "is_system_provided": false,
          "required": false
        },
        {
          "id": "customer_id",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Internal customer id if available.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "is_system_provided": false,
          "required": false
        },
        {
          "id": "require_calendar_check",
          "type": "boolean",
          "value_type": "llm_prompt",
          "description": "Set true to reject conflicting slots; default true.",
          "dynamic_variable": "",
          "constant_value": false,
          "enum": null,
          "is_system_provided": false,
          "required": false
        }
      ],
      "required": false,
      "value_type": "llm_prompt"
    },
    "request_headers": [
      {
        "type": "value",
        "name": "x-tool-api-key",
        "value": "1234567890"
      },
      {
        "type": "value",
        "name": "Content-Type",
        "value": "application/json"
      }
    ],
    "auth_connection": null
  },
  "assignments": [],
  "response_timeout_secs": 20,
  "dynamic_variables": {
    "dynamic_variable_placeholders": {}
  }
}
